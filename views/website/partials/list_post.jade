
.container-fluid
  
  .row
    .listpost
        .col-lg-12.col-md-12.col-sm-12.col-xs-12
        
          .col-lg-3.col-md-3.col-sm-5.col-xs-6.post-title-main
            h4.lead(style="padding-top:12px")(ng-bind="catalory.name")

          .col-lg-9.col-md-9.col-sm-7.col-xs-6.post-title-child
            h5.lead(style="padding-top:5px;")(ng-bind="catalory.description")
