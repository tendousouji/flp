script.
  $(document).ready(function(){
    
    var slider_width = $('.slider-border').width();
    var slide_number = 3;
    $('.slider-container').width(slider_width*slide_number);
    $('.slider-content').width(slider_width);

    var width_step = 0;
    var arrow_margin = (($('.slider').width() - $('.slider-border').width())/2) - 100;
    $('.navi-arrows#left').css('left', arrow_margin);
    $('.navi-arrows#right').css('right', arrow_margin);

    var slideRun = function () {
      $('.slider-container').css('margin-left', width_step);
      if(width_step == (-slider_width*(slide_number-1)))
        width_step = 0;
      else 
        width_step -= slider_width;
    }

    var slideTimer = setInterval(slideRun, 1900);
    slideRun();

    var margin_value = (482 - $('.slider-post').height())/2;
    $('.slider-post').css('margin-top', margin_value);
    $('.slider-post').css('margin-bottom', margin_value-10);

    $(window).on('resize', function (){
      width_step = 0;
      clearInterval(slideTimer);
      
      slider_width = $('.slider-border').width();
      $('.slider-container').width(slider_width*slide_number);
      $('.slider-content').width(slider_width);
      
      slideTimer = setInterval(slideRun, 1900);

      arrow_margin = (($('.slider').width() - $('.slider-border').width())/2) - 100;
      $('.navi-arrows#left').css('left', arrow_margin);
      $('.navi-arrows#right').css('right', arrow_margin);
    });

  }); 