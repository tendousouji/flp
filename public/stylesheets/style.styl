.menubar
  // border: 2px solid blue
  border-top: 2px solid #000000
  margin-top: 20px
  background: #fafafa
.menubar-item
  z-index: 2
  // border: 2px solid red
  height: 50px
  line-height: 50px
  text-align: center
  font-size: 16px
  font-weight: bold
  position: relative
  transition: all 0.4s ease
  &.active-item
    .menubar-item-highlight
      opacity: 1
  &:hover
    cursor: pointer
    color: #ff7200
    .menubar-item-highlight
      opacity: 1
    .submenubar
      height: 500px

.menubar-item-highlight
  border-bottom: 5px solid #ff7200
  position: absolute
  top: -6px
  left: 0
  width: 100%
  opacity: 0
  border-left: 2px solid #ffffff
  border-right: 2px solid #ffffff
  transition: all 0.4s ease
  @media (max-width: 768px)
    display: none

.submenubar
  position: absolute
  top: 50px
  width: 280px
  height: 0
  overflow: hidden
  transition: all 0.2s ease
.submenubar-item
  height: 50px
  width: 280px
  text-align: left
  font-size: 14px
  color: #000000
  background: rgba(255, 255, 255, 0.5)
  padding-left: 15px
  z-index: 100
  transition: all 0.2s ease
  &:hover
    background: #ff7200
    color: #ffffff
    
